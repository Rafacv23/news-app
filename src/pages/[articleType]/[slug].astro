// Importa la función getArticleBySlug desde tu archivo de utilidad api.js
import { getArticleBySlug } from '../../lib/api.js';

// Define la función getStaticPaths
export async function getStaticPaths() {
  // Llama a la función getArticleBySlug para obtener la lista de artículos
  const articles = await getArticleBySlug();

  // Genera los paths dinámicamente basados en los articleType y slug de cada artículo
  const paths = articles.map((article) => ({
    params: { articleType: article.type, slug: article.slug }
  }));

  // Retorna un objeto con los paths y fallback
  return {
    paths,
    fallback: false // o true si quieres utilizar fallback
  };
}


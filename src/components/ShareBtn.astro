<span class="tooltip tooltip-top" data-tooltip="Copiar enlace">
    <button id="share-btn" class="flex items-center gap-4">
        <span>Compartir</span>
        <svg width="24px" height="24px" stroke-width="1.5" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" color="#ffffff" data-darkreader-inline-color="" style="--darkreader-inline-color: #ffffff;">
            <path d="M18 22C19.6569 22 21 20.6569 21 19C21 17.3431 19.6569 16 18 16C16.3431 16 15 17.3431 15 19C15 20.6569 16.3431 22 18 22Z" stroke="#ffffff" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" data-darkreader-inline-stroke="" style="--darkreader-inline-stroke: #ffffff;"></path>
            <path d="M18 8C19.6569 8 21 6.65685 21 5C21 3.34315 19.6569 2 18 2C16.3431 2 15 3.34315 15 5C15 6.65685 16.3431 8 18 8Z" stroke="#ffffff" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" data-darkreader-inline-stroke="" style="--darkreader-inline-stroke: #ffffff;"></path>
            <path d="M6 15C7.65685 15 9 13.6569 9 12C9 10.3431 7.65685 9 6 9C4.34315 9 3 10.3431 3 12C3 13.6569 4.34315 15 6 15Z" stroke="#ffffff" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" data-darkreader-inline-stroke="" style="--darkreader-inline-stroke: #ffffff;"></path>
            <path d="M15.5 6.5L8.5 10.5" stroke="#ffffff" stroke-width="1.5" data-darkreader-inline-stroke="" style="--darkreader-inline-stroke: #ffffff;"></path>
            <path d="M8.5 13.5L15.5 17.5" stroke="#ffffff" stroke-width="1.5" data-darkreader-inline-stroke="" style="--darkreader-inline-stroke: #ffffff;"></path>
        </svg>
    </button>
    </span>
    
    <script>
        const $shareBtn = document.getElementById("share-btn");
        $shareBtn.addEventListener('click', () => {
            let url = window.location.href
    
            let tempInput = document.createElement('input');
            tempInput.style.position = 'absolute';
            tempInput.style.left = '-1000px';
            tempInput.value = url;
            document.body.appendChild(tempInput);
            
            // Seleccionar y copiar el contenido del campo de entrada temporal
            tempInput.select();
            document.execCommand('copy');
            
            // Eliminar el campo de entrada temporal
            document.body.removeChild(tempInput);
            
            // Cambiar el mensaje del tooltip
            document.querySelector('.tooltip').setAttribute('data-tooltip', 'Enlace copiado');
        })
    </script>

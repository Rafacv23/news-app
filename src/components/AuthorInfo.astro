---
import { Image } from "astro:assets"
import {getAuthorByName} from '../lib/api/getAuthorByName.js'

const {author, published} = Astro.props
const avatarAutorEncontrado = await getAuthorByName(author);
---

<section id="author-info" class="max-w-3xl" >
          <Image src={avatarAutorEncontrado.src} alt={avatarAutorEncontrado.alt} width="46" height="46" alt=`${author.author} avatar` class="avatar" />
        <div>
            <h4 id="author-name" class="author text-xs">{author.author}</h4>
            <h4 class="author">{published}</h4>
        </div>
</section>

<style>

    img{
        border-radius: 2rem;
    }
        #author-info{
        display: flex;
        flex-direction: row;;
        gap: 1rem;
        align-items: end;
        justify-content: start;
    }

    div{
        display: flex; 
        flex-direction: column;
    }
    .author{
        font-size: 1rem;
        font-weight: lighter;
        margin: 0;
    }

    #author-name:hover{
        color: #FD6C3E;
        transition: .5s;
        cursor: pointer;
    }
</style>